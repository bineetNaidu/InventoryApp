{
  "name": "inventory-app-server",
  "version": "0.0.1",
  "main": "server.js",
  "private": true,
  "scripts": {
    "start": "NODE_ENV=production node build/server",
    "dev": "nodemon src/server.ts",
    "build": "tsc",
    "heroku-postbuild": "NPM_CONFIG_PRODUCTION=false npm run build",
    "test:watch": "jest --watchAll --no-cache",
    "test": "jest"
